<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.idogo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.idogo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.idogo.IdentifyBreed"
            android:label = "@string/identify_the_breed"
            android:parentActivityName="com.example.idogo.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=
                    "com.example.idogo.MainActivity" />
        </activity>

        <activity android:name="com.example.idogo.IdentifyDog"
            android:label = "@string/identify_the_dog"
            android:parentActivityName="com.example.idogo.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=
                    "com.example.idogo.MainActivity" />
        </activity>

        <activity android:name="com.example.idogo.SearchDog"
            android:label = "@string/search_the_dog"
            android:parentActivityName="com.example.idogo.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=
                    "com.example.idogo.MainActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>